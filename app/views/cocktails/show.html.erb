<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://media.beam.usnews.com/e3/41/016a8e9b4c5b926771122598d9b6/160226-craftcocktails-stock.jpg');">
  <div class="banner-content">
    <h1><%= @cocktail.name %> </h1>
  </div>
</div>

<div class="container">
  <div class="ingredients">
    <h2><i class="fa fa-eyedropper" aria-hidden="true"></i> Ingredients</h2>
    <ol>
      <% if !@cocktail.doses.nil? %>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> of <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-times-circle-o" aria-hidden="true"></i>
            <% end %>
          </il>
        <% end %>
      <% end %>
    </ol>
  </div>
  <div class="form-bckg">
    <%= render file: "doses/new" %>
  </div>

  <div> <br> <%= link_to "back to cocktails", root_path, class:'btn btn-primary' %> </div>
</div>
