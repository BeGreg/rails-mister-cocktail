<div class="container">
  <h1><%= @cocktail.name %> </h1>

  <h2>Ingredients</h2>
  <div class="toolbar">
    <%= link_to new_cocktail_dose_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-times-circle-o" aria-hidden="true"></i>
      Delete
    <% end %>
  </div>
  <ul class="dose-list">
    <% if !@cocktail.doses.nil? %>
      <% @cocktail.doses.each do |dose| %>
        <ol>
          <%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-times-circle-o" aria-hidden="true"></i>
          <% end %>
        </ol>
      <% end %>
    <% end %>
  </ul>
  <div>
    <%= render file: "doses/new" %>
  </div>

  <div> <br> <%= link_to "back to cocktails", root_path, class:'btn btn-primary' %> </div>
</div>
