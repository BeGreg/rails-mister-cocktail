<h2> <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Add a dose for <%= @cocktail.name %>:</h2>
<div>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <div class="form-group">
      <%= f.collection_select :ingredient_id, Ingredient.order(:name), :id, :name, prompt: "Choose an ingredient", class: 'drowdown-list' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, :class => 'form-input cell' %>
    </div>
    <%= f.submit "Let's dose!", class:'btn btn-primary' %>
  <% end %>
</div>
