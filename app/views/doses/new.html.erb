<h1>Add a dose for <%= @cocktail.name %></h1>
<div>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, :class => 'form-input cell' %>
      <%= f.collection_select :ingredient_id, Ingredient.order(:name), :id, :name, include_blank: false %>
    </div>
    <div class="form-group">
    </div>
    <%= f.submit "Let's dose!", class:'btn btn-primary' %>
  <% end %>
</div>
